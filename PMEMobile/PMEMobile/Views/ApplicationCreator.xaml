<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PMEMobile.Views.ApplicationCreator">
    <ContentPage.Content>
        <StackLayout>
            <Editor x:Name="AppName" Placeholder="Name" Margin="0,180,0,0"/>
            <Button Text="Confirm" Margin="0,20,0,0" Clicked="CreateApplication"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>